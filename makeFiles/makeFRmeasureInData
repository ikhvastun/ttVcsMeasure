CXX=g++
RM=rm -f
CPPFLAGS=-std=c++0x -g $(shell root-config --cflags) -Wwrite-strings
LDFLAGS=-g $(shell root-config --ldflags)
LDLIBS=$(shell root-config --libs) -lTMVA
CFLAGS = `root-config --cflags --libs`

EXECUTABLE = runFR

SOURCES = src/CMS_lumi.cc src/runFRmeasureInData.cc src/treeReader.cc src/analysisTools.cc src/eventSelection.cc src/Sample.cc src/stringTools.cc src/systemTools.cc
OBJS=$(subst .cc,.o,$(SOURCES))

all: runFR

runFR: $(OBJS)
	$(CXX) $(LDFLAGS) -o $(EXECUTABLE) $(OBJS) $(LDLIBS) 

%.o: %.c 
	$(CC) $(CFLAGS) $(CPPFLAGS) -c $<

.PHONY: clean

clean:
	$(RM) src/*.o *.so *.d
